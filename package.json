{
  "name": "vue-i18n-directives",
  "version": "2.1.3",
  "description": "Helper directives for vue & vue-i18n",
  "main": "dist/vue-i18n-directives.min.js",
  "author": "Ignacio Anaya <ignacio.anaya89@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ianaya89/vue-i18n-directives.git"
  },
  "keywords": [
    "i18n",
    "vue",
    "translate",
    "directive"
  ],
  "scripts": {
    "build": "ENV=prod webpack --progress --colors -p",
    "build:dev": "ENV=dev webpack --progress --colors",
    "dev": "ENV=dev webpack --progress --colors --watch",
    "cover": "open coverage/lcov-report/index.html",
    "eslint": "eslint . --ext .js",
    "eslint:fix": "eslint . --fix",
    "test": "jest --coverage",
    "prepublish": "npm run build && npm run build:dev"
  },
  "devDependencies": {
    "babel-core": "^6.24.1",
    "babel-loader": "^6.4.1",
    "babel-preset-env": "^1.4.0",
    "eslint": "^3.19.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-loader": "^1.7.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-node": "^4.2.2",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-standard": "^3.0.1",
    "jest": "^19.0.2",
    "pre-commit": "^1.1.3",
    "webpack": "^2.5.0"
  },
  "pre-commit": [
    "eslint"
  ],
  "jest": {
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    },
    "collectCoverageFrom": [
      "src/**"
    ],
    "roots": [
      "test/"
    ]
  }
}
